<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
 android:id="@+id/relative"
 android:layout_width="wrap_content" android:layout_height="match_parent">
 	<TextView 
 	    android:id="@+id/dialog_title"
 	    android:layout_alignTop="@id/relative"
 	    android:layout_width="wrap_content"
 	    android:layout_height="wrap_content"
 	    android:layout_centerHorizontal="true"
 	    />
 	
 	<View
 	    android:id="@+id/separator0"
 	    android:layout_below="@id/dialog_title"		
		android:layout_width="fill_parent"
		android:layout_height="1dp"
		android:background="@color/white" 
		/>
 	
    <TextView
        android:layout_marginTop="10dp" 
        android:id="@+id/created_by"
        android:layout_below="@id/separator0"     
       	android:layout_width="wrap_content"
       	android:layout_height="wrap_content"
       	android:layout_centerHorizontal="true"
	/>
    <TextView 
        android:id="@+id/created_by_time"
        android:layout_below="@id/created_by"
       	android:layout_width="wrap_content"
       	android:layout_height="wrap_content"
       	android:layout_centerHorizontal="true"
       	android:layout_marginBottom="10dp"
	/>
    
    <View
        android:id="@+id/separator1"
        android:layout_below="@id/created_by_time"
		android:layout_width="fill_parent"
		android:layout_height="1dp"
		android:background="@color/white" />
 	
    <TextView 
        android:layout_marginTop="10dp"
        android:id="@+id/last_modified"
        android:layout_below="@id/separator1"     
       	android:layout_width="wrap_content"
       	android:layout_height="wrap_content"
       	android:layout_centerHorizontal="true"
       	android:layout_marginBottom="10dp"
	/>
    
    <View
        android:id="@+id/separator2"
        android:layout_below="@id/last_modified"
		android:layout_width="fill_parent"
		android:layout_height="1dp"
		android:background="@color/white" />
    
    <TextView 
        android:layout_marginTop="10dp"
        android:id="@+id/sync_state"
        android:layout_below="@id/separator2"     
       	android:layout_width="wrap_content"
       	android:layout_height="wrap_content"
       	android:layout_centerHorizontal="true"
       	android:layout_marginBottom="10dp"
	/>
    
    <View
        android:id="@+id/separator3"
        android:layout_below="@id/sync_state"
		android:layout_width="fill_parent"
		android:layout_height="1dp"
		android:background="@color/white" />
	<TextView 
	     android:layout_marginTop="10dp"
        android:id="@+id/start"
        android:layout_below="@id/separator3"     
       	android:layout_width="wrap_content"
       	android:layout_height="wrap_content"
       	android:layout_centerHorizontal="true"
	/>
	<TextView 
        android:id="@+id/finish"
        android:layout_below="@id/start"     
       	android:layout_width="wrap_content"
       	android:layout_height="wrap_content"
       	android:layout_centerHorizontal="true"
       	 android:layout_marginBottom="10dp"
	/>
	
	<View
	    android:layout_below="@id/finish"     
		android:layout_width="fill_parent"
		android:layout_height="10dp"/>

</RelativeLayout>